<%= simple_form_for(@articulo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, as: :string, label: "Nombre del Articulo", :label_html =>{:class => "wide"}%>
    <%= f.input :description, label: "Descripcion del Articulo", :label_html =>{:class => "wide"} %>
    <%= f.input :area , as: :string, label: "Area"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
