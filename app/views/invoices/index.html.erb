<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listado de Invoices</h1>

  <table id="invoices">
    <thead>
    <tr>
                <th>Provider</th>
                <th>Num factura</th>
                <th>User</th>
                <th>State</th>
                <th>Purchase order</th>
                <th>Received date</th>
                <th>Payment deadline</th>
                <th>Payment date</th>
            <!-- ver-->
      <th></th>
      <!-- editar-->
      <% if can? :update, @invoice %>
          <th></th>
      <% end %>
      <!-- Eliminar-->
      <% if can? :destroy,  @invoice  %>
          <th></th>
      <% end %>
    </tr>
    </thead>

    <tbody>
    <% @invoices.each do |invoice| %>
    <tr>
                <td><%= invoice.provider %></td>
                <td><%= invoice.num_factura %></td>
                <td><%= invoice.user %></td>
                <td><%= invoice.state %></td>
                <td><%= invoice.purchase_order %></td>
                <td><%= invoice.received_date %></td>
                <td><%= invoice.payment_deadline %></td>
                <td><%= invoice.payment_date %></td>
      
      <td style="text-align: center">
        <%= button_to 'Mostrar', invoice, class: "btn btn-default", :method => :get %>
      </td>
      <% if can? :update, @invoice %>
        <td style="text-align: center">
          <%= button_to 'Editar', edit_invoice_path(invoice), class: "btn btn-default", :method => :get %>
        </td>
      <% end %>
      <!-- Eliminar-->
      <% if can? :destroy,  @invoice  %>
        <td style="text-align: center">
          <%= button_to 'Eliminar', invoice, class: "btn btn-default", method: :delete, data: { confirm: 'Â¿Estas que desea eliminar este  ?' } %>
        </td>
      <% end %>

    </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <% if can? :create, @invoice %>
      <%= button_to 'Crear nuevo  Invoice', new_invoices_path , class: "btn", :method => :get   %>
  <% end %>
</div>