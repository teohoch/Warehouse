<%= simple_form_for(@provider) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :name, as: :string, label: "Nombre del Proveedor", :label_html =>{:class => "wide"} %>
    <%= f.input :address, label: "Direccion" %>
    <%= f.input :phone, as: :string, label: "Telefono" %>
    <%= f.input :rut %>
  </div>

  <div class="form-actions pull-right">
    <%= f.button :submit %>
  </div>
<% end %>
