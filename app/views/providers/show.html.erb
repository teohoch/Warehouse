<div class="container">
  <h1>Proveedor <%= @provider.name.titleize %></h1>

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Direccion:</strong>
    <%= @provider.address %>
  </p>

  <p>
    <strong>Telefono:</strong>
    <%= @provider.phone %>
  </p>

  <p>
    <strong>RUT:</strong>
    <%= @provider.rut %>
  </p>
  <br/>
  <div style="float:left;">
    <%= button_to 'Editar', edit_provider_path(@provider), class: "btn", :method => :get   %>
  </div>
  <div style="float: left;margin-left: 2%;">
    <%= button_to 'Regresar', providers_path, class: "btn", :method => :get   %>
  </div>

  <br/>
  <br/>

  <h2>Listado de  Articulos Disponibles</h2>

  <table id="providers">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Area</th>
      <th>Precio Contenedor</th>
      <th>Precio Unitario</th>
      <th>Unidades por Contenedor</th>
    </tr>
    </thead>

    <tbody>
    <% @available.each do |articulo| %>
        <tr>
          <td><%= articulo.articulo.name %></td>
          <td><%= articulo.articulo.description %></td>
          <td><%= articulo.articulo.area %></td>
          <td style="text-align: center">$<%= articulo.provider_article.container_price %></td>
          <td style="text-align: center">$<%= articulo.provider_article.unit_price %></td>
          <td style="text-align: center"><%= articulo.provider_article.units_per_container %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br/>
  <div style="float:left;">
    <%= button_to 'Agregar Articulos disponibles', select_add_multiple_articles_provider_path(@provider), class: "btn btn-default", :method => :get  %>
  </div>
  <div style="float: left;margin-left: 2%;">
     <%= button_to 'Remover Articulos disponibles', select_remove_multiple_articles_provider_path(@provider), class: "btn btn-default", :method => :get  %>
  </div>


</div>